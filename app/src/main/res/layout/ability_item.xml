<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/abilityName"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Type"
        android:id="@+id/abilityType"
        android:layout_below="@+id/abilityName"
        android:layout_centerInParent="true" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="Dice"
        android:id="@+id/abilityDice"
        android:layout_below="@+id/abilityName"
        android:layout_centerInParent="true" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="Range"
        android:id="@+id/abilityRange"
        android:layout_below="@+id/abilityName"
        android:layout_centerInParent="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:id="@+id/abilityDescription"
        android:layout_below="@+id/abilityType"
        android:layout_alignParentLeft="true"/>
</RelativeLayout>